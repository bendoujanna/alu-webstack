global
    log /dev/log local0
    log /dev/log local1 notice
    daemon
    maxconn 256

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    retries 3
    timeout connect 5000ms
    timeout client  50000ms
    timeout server  50000ms

# HTTP frontend: redirect all traffic to HTTPS
frontend http_front
    bind *:80
    redirect scheme https code 301 if !{ ssl_fc }

# HTTPS frontend: terminate SSL and forward traffic to backend
frontend https_front
    bind *:443 ssl crt /etc/ssl/certs/irisbarista.tech.pem
    default_backend http_back

# Backend servers
backend http_back
    balance roundrobin
    server web-01 13.222.208.54:80 check
    server web-02 44.204.16.183:80 check
