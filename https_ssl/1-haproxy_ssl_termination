global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

    # Enable SSL
    ca-base /etc/ssl/certs
    crt-base /etc/ssl/private

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5s
    timeout client  50s
    timeout server  50s

frontend www-https
    bind *:443 ssl crt /etc/ssl/private/www.irisbarista.tech.pem
    default_backend web-backend

frontend www-http
    bind *:80
    redirect scheme https code 301 if !{ ssl_fc }

backend web-backend
    balance roundrobin
    server 6795-web-01 13.222.208.54:80 check
    server 6795-web-02 44.204.16.183:80 check
